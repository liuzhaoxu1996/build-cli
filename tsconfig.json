{
  "compilerOptions": {
    "target": "es5",
    "lib": ["es2018"],
    "module": "CommonJS",
    "outDir": "./build",
    "paths": {},
    "baseUrl": ".",
    "rootDir": "./", 
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "moduleResolution": "node",
    "noImplicitAny": true,
    "removeComments": true,
    "preserveConstEnums": true,
    "declaration": true,
    "allowJs": true,
    "allowSyntheticDefaultImports": true,
  },
  "include": [
    "./lib/**/*",
    "./types"
  ],
  "exclude": [
    "node_modules",
  ]
}